<%= render 'shared/background_layout' do %>
  <%= render 'shared/content_card' do %>
        <div class="text-center mb-8">
          <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-800">
          お肉を選ぼう
          </h1>
          <p class="text-gray-600 text-sm md:text-base">
            お好みのお肉を選択してください
          </p>
      </div>

      <%= form_with url: meat_path, method: :post, class: "space-y-6" do %>
        <div class="space-y-4">
          <% @meats.each do |meat| %>
            <label class="flex items-center p-4 bg-gray-50 hover:bg-orange-50 rounded-xl cursor-pointer transition-colors duration-200 border border-gray-200 hover:border-orange-300">
              <%= radio_button_tag :meat, meat, false, class: "w-5 h-5 text-orange-500 focus:ring-orange-400 focus:ring-2" %>
              <span class="ml-4 text-gray-800 font-medium text-lg"><%= meat %></span>
            </label>
          <% end %>
        </div>
        
        <div class="pt-4">
          <%= submit_tag "次へ", class: "w-full px-10 py-4 bg-orange-500 hover:bg-orange-600 text-white text-lg md:text-xl font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" %>
        </div>
      <% end %>
  <% end %>
<% end %>
