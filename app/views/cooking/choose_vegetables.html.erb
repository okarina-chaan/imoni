<%= render 'shared/background_layout' do %>
<%= render 'shared/content_card' do %>
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-800">
        野菜を選ぼう
      </h1>
      <p class="text-gray-600 text-sm md:text-base">
        お好みの野菜を選択してください
      </p>
    </div>

    <%= form_with url: choose_vegetables_path, method: :post, local: true do |form| %>
      <div class="space-y-4">
        <% @vegetables.each_with_index do |vegetable, index| %>
          <div class="flex items-center mb-4">
            <%= form.check_box "vegetables[]", { id: "vegetable-checkbox-#{index}", class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded-sm focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" }, vegetable, "" %>
            <%= form.label "vegetables[]", vegetable, for: "vegetable-checkbox-#{index}", class: "ms-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
          </div>
        <% end %>
      </div>
      <div class="flex pt-4">
        <%= form.submit "次へ", class: "w-full px-10 py-4 bg-orange-500 hover:bg-orange-600 text-white text-lg md:text-xl font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" %>
      </div>
    <% end %>
<% end %>
<% end %>
