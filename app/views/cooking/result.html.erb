<div class="min-h-screen bg-gradient-to-br from-yellow-100 to-orange-100 flex items-center justify-center py-8">
  <div class="bg-white bg-opacity-95 rounded-2xl p-8 md:p-12 mx-4 max-w-2xl shadow-2xl">
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-6 text-gray-800">
        🎉 診断結果
      </h1>
      <div class="text-6xl mb-4">🍲</div>
      <h2 class="text-2xl md:text-3xl font-bold text-orange-600 mb-4">
        <%= @result_title %>
      </h2>
      <p class="text-gray-700 text-base md:text-lg leading-relaxed mb-6">
        <%= @result_description %>
      </p>
    </div>

    <!-- 選択した材料の表示 -->
    <div class="bg-orange-50 rounded-xl p-6 mb-8">
      <h3 class="font-bold text-gray-800 mb-4 text-lg">あなたが選んだ材料：</h3>
      <div class="space-y-2">
        <div class="flex items-center">
          <span class="text-orange-500 mr-2">🥩</span>
          <span class="text-gray-700"><%= @selected_meat %></span>
        </div>
        <div class="flex items-center">
          <span class="text-green-500 mr-2">🥕</span>
          <span class="text-gray-700"><%= @selected_vegetable %></span>
        </div>
        <div class="flex items-center">
          <span class="text-purple-500 mr-2">🧂</span>
          <span class="text-gray-700"><%= @selected_seasoning %></span>
        </div>
      </div>
    </div>

    <!-- アクションボタン -->
    <div class="space-y-4">
      <%= link_to "もう一度診断する", root_path, 
          class: "w-full inline-block text-center px-10 py-4 bg-orange-500 hover:bg-orange-600 text-white text-lg md:text-xl font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" %>
      
      <div class="text-center">
        <%= link_to "結果をシェア", "#", 
            class: "inline-block px-8 py-3 border-2 border-orange-500 text-orange-500 hover:bg-orange-500 hover:text-white font-semibold rounded-xl transition-all duration-200",
            onclick: "shareResult(); return false;" %>
      </div>
    </div>
  </div>
</div>

<script>
function shareResult() {
  if (navigator.share) {
    navigator.share({
      title: '芋煮診断結果',
      text: '<%= @result_title %>',
      url: window.location.href
    });
  } else {
    // フォールバック: URLをコピー
    navigator.clipboard.writeText(window.location.href);
    alert('結果のURLをコピーしました！');
  }
}
</script>
