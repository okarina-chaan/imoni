<%= javascript_include_tag 'share_result' %>

<%= render 'shared/background_layout' do %>
  <%= render 'shared/content_card' do %>
    <div class="text-center mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-6 text-gray-800">
        結果
      </h1>
      <h2 class="text-2xl md:text-3xl font-bold text-orange-600 mb-4">
        <%= @result %>
      </h2>
      <p class="text-gray-700 text-base md:text-lg leading-relaxed mb-6">
        <%= @result_description %>
      </p>
    </div>

    <div class="space-y-4">
      <%= link_to "もう一度診断する", root_path, 
          class: "w-full inline-block text-center px-10 py-4 bg-orange-500 hover:bg-orange-600 text-white text-lg md:text-xl font-bold rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-200" %>
      
      <div class="text-center">
        <%= link_to "結果をシェア", "#", 
            class: "inline-block px-8 py-3 border-2 border-orange-500 text-orange-500 hover:bg-orange-500 hover:text-white font-semibold rounded-xl transition-all duration-200",
            data: { result: @result },
            onclick: "shareResult(this.dataset.result); return false;" %>
      </div>
    </div>
  <% end %>
<% end %>
