<%= render 'shared/background_layout' do %>
  <%= render 'shared/content_card' do %>
    <% content_for :card_content do %>
      <div class="text-center mb-8 lg:mb-12">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-4 lg:mb-6 text-gray-800 leading-tight">
          芋煮を作ろう！
        </h1>
        <div class="space-y-2 lg:space-y-3">
          <p class="text-lg sm:text-xl md:text-2xl lg:text-3xl text-gray-700 font-medium">
            好きな具材を選んで
          </p>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600">
            どんな芋煮ができるか診断してみよう
          </p>
        </div>
      </div>

      <div class="text-center">
        <%= link_to choose_meat_path,
            class: "inline-block px-8 sm:px-10 lg:px-12 py-3 sm:py-4 lg:py-5 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white text-lg sm:text-xl lg:text-2xl font-bold rounded-xl lg:rounded-2xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 active:translate-y-0 transition-all duration-200 focus:outline-none focus:ring-4 focus:ring-orange-300" do %>
          <span class="flex items-center justify-center space-x-2">
            <span>早速作る</span>
            <svg class="w-5 h-5 sm:w-6 sm:h-6 lg:w-7 lg:h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
